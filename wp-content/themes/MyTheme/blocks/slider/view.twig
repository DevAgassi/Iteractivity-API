{% set limit = is_preview ? 1 : null %}
<!-- Slider -->
<section class="swiper swiper-slider">
	<div class="swiper-wrapper">
		{% for slide in fields.slides %}
			<div class="swiper-slide relative">
				{% if slide.image %}
					<div class="slider-overlay w-full absolute left-0 h-full">
						<img src="{{ slide.image.url }}" alt="{{ slide.image.alt|default('') }}">
					</div>
				{% endif %}
				{% if slide.title %}
					<h3>{{ slide.title }}</h3>
				{% endif %}
				{% if slide.description %}
					<p>{{ slide.description }}</p>
				{% endif %}
				{% if slide.cta_link and slide.cta_text %}
					<a href="{{ slide.cta_link }}" class="btn btn-primary">{{ slide.cta_text }}</a>
				{% endif %}
			</div>
		{% endfor %}
	</div>

	<!-- Optional navigation -->
	<div class="swiper-button-next"></div>
	<div class="swiper-button-prev"></div>
	<div class="swiper-pagination"></div>
</section>
