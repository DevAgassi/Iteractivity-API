<article class="latest-post-card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
	<div data-image-container class="latest-post-image h-48 overflow-hidden bg-gray-200">
		<img 
			src="{{ post.imageUrl }}" 
			data-image
			alt="{{ post.title }}"
			class="w-full h-full object-cover"
		>
	</div>
	<div class="p-4">
		<h3 class="text-lg font-semibold text-gray-800 mb-2 line-clamp-2">
			<a data-link href="{{ post.link }}" class="hover:text-indigo-600" data-title>{{ post.title }}</a>
		</h3>
		<p data-excerpt class="text-sm text-gray-600 mb-4 line-clamp-3">{{ post.excerpt }}</p>
		<div class="flex items-center justify-between">
			<span data-date class="text-xs text-gray-500">{{ post.date }}</span>
			<a href="{{ post.link }}" class="text-indigo-600 hover:text-indigo-700 text-sm font-medium">
				Читати далі →
			</a>
		</div>
	</div>
</article>
