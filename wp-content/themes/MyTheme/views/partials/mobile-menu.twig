<div
	class="flex flex-col min-h-full bg-white">
	<!-- Кнопка закрытия -->
	<nav class="sticky top-0 flex w-full justify-end p-4 bg-white z-10">
		<button popovertarget="mobile-menu" popovertargetaction="hide" class="p-2 text-gray-700">
			<svg class="size-7" fill="none" stroke="currentColor" viewbox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
			</svg>
		</button>
	</nav>

	<div class="flex-1 px-6 pb-8">
		{% for item in items %}
			<div class="border-b border-gray-100 last:border-0">
				{% if item.children %}
					{# Если есть дети, используем details для раскрытия #}
					<details class="group/details py-4">
						<summary
							class="flex items-center justify-between list-none cursor-pointer">
							{# Ссылка (клик по тексту ведет на страницу) #}
							<a href="{{ item.link }}" class="text-xl font-bold text-gray-900 hover:text-blue-600 stop-propagation">
								{{ item.title }}
							</a>

							{# Стрелка (клик сюда раскрывает меню) #}
							<div class="p-2 -mr-2">
								<svg class="w-5 h-5 text-gray-400 transition-transform group-open/details:rotate-180" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
								</svg>
							</div>
						</summary>

						{# Вложенное меню (скрыто по умолчанию) #}
						<div class="mt-4 ml-4 space-y-4 border-l-2 border-gray-50 pl-4">
							{% for child in item.children %}
								<a href="{{ child.link }}" class="block text-lg text-gray-600 hover:text-blue-600">
									{{ child.title }}
								</a>
							{% endfor %}
						</div>
					</details>
				{% else %}
					{# Обычная ссылка без детей #}
					<a href="{{ item.link }}" class="block py-4 text-xl font-bold text-gray-900">
						{{ item.title }}
					</a>
				{% endif %}
			</div>
		{% endfor %}
	</div>
	{# Футер меню (опціонально, як на nph) #}
	<div class="p-6 border-t border-gray-100 mt-auto">
		<a href="/donate" class="block w-full py-4 bg-blue-600 text-white text-center rounded-lg font-bold">
			Spenden (Підтримати)
		</a>
	</div>
</div>
